.bio
  padding: 20px;
  font-family: Roboto;
  display: flex;
  align-items: center;
  width: 95%;
  max-width: 1200px;
  margin: 0 auto 40px auto;

  &:hover 
    z-index: 2;

  img 
    border-radius: 50%;
    width: 80px;
    height: 80px;
    margin-right: 30px;
    margin-bottom: 0 !important;

  p 
    font-size: 18px;
    margin-bottom 0 !important;
  
  a 
    color: #3F51B5;
    text-decoration: none;

    &:hover 
      text-decoration: underline;